# Copy this file to `app.env` and edit the values.
# IMPORTANT: Do NOT commit `app.env` (it's in .gitignore).

# Flask secret key (change in production)
SECRET_KEY=change_this_secret

# Registration codes (change in production)
REGISTRATION_SECRET_CODE=change_this_registration_code
ADMIN_CODE=change_this_admin_code

# App mode and DB
DEVELOPMENT_MODE=False
# Optional: override SQLite with another DB (e.g., Postgres)
# SQLALCHEMY_DATABASE_URI=postgresql+psycopg2://user:pass@db:5432/ctf
# Default (if not set): sqlite:////app/data/prod_database.db
